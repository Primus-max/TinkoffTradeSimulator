<Window x:Class="TinkoffTradeSimulator.Views.Windows.CandleIntervalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TinkoffTradeSimulator.Views.Windows"
        mc:Ignorable="d"
        Title="CandleIntervalWindow" Height="300" Width="300">
    <Grid>
        <ItemsControl ItemsSource="{Binding candleTimeFrames}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Name}" Click="CandleTimeFrameButton_Click" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
